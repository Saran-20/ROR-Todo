<div class ="form">
  <h1 style="margin-left:35%">My Todo List</h1>
<%= form_with(url: "/add", method: "post") do %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
      <%= text_field_tag "task", nil, class: "AddTodo-text", autofocus: "autofocus" %>
      <%= date_field_tag "due_date", nil, class: "AddTodo-date" %>
      <%= submit_tag "Add", class: "AddTodo-button" %>
<% end %>
  
</div>
<div class = "head" style="display:inline-block">


</div>

<%= render partial: "list" , locals:{ title: "Overdue",todos: User.overdue}%>


<%= render partial: "list" , locals:{ title: "Due Today",todos: User.duetoday}%>


<%= render partial: "list" , locals:{ title: "Due Later",todos: User.duelater}%>


